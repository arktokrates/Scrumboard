doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
   body
    block content

 
  script(type='text/template')#task-template
    div(class='taskCard', class='task')
      .task_head
        span.task_title <%= title %>
        .task_rating_name Est:&nbsp;
          span.task_rating <%= rating %>
      .task_description <%= description %>
      div
        span Responsible: 
        span.task_responsible <%= responsible %>
      .task_edit
        span.edit Edit
        span.save Save
        span.delete
          img(src="images/delete.png", width="24")

  script(type='text/javascript', src='/javascripts/lib/jquery-2.1.3.js')
  script(type='text/javascript', src='/javascripts/lib/jquery-ui-1.11.4.min.js')
  script(type='text/javascript', src='/javascripts/lib/underscore.js')
  script(type='text/javascript', src='/javascripts/lib/backbone.js')

  script(type='text/javascript', src='/javascripts/models/task_model.js')
  script(type='text/javascript', src='/javascripts/collections/tasks_coll.js')
  script(type='text/javascript', src='/javascripts/views/tasks_view.js')
  script(type='text/javascript', src='/javascripts/app_tasks.js')