extends layout

block content
  h1= title
  div.container
    div.createCard
      h2 Create card
        div#create
          p Title:  
            input(type='text', name='title', size='40')#title
          p Description:  
          p
            textarea(name='description', cols='35' rows='10')#description
          div
            span Rating: 
            span
              select(name='rating')#rating
                option(value=1) 1
                option(value=2) 2
                option(value=3) 3
                option(value=5) 5
                option(value=8) 8
          p Responsible:  
            input(type='text', name='responsible', size='30')#responsible
          button#submit Save

    div#scrumboard
      table.table
        thead
          tr
            th.column-title Todo
            th.column-title In progress
            th.column-title Done
        tbody
          tr         
            td#todo
            td#inProgress
            td#done
  footer
